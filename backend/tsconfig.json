{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2023"],
    "moduleResolution": "Node",
    "rootDir": "app",
    "outDir": "bin",
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "removeComments": true,

    "baseUrl": "./app",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@constants/*": ["constants/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"]
    },

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": ["app/**/*"],
  "exclude": ["node_modules", "bin"]
}
